{
  "version": 2,
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "env": {
    "ADMIN_KEY": "your-secure-admin-key"
  }
}
